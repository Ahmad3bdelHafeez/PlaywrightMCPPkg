{
  "browser": {
    "type": "chromium",
    "launchOptions": {
      "headless": true,
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--disable-gpu",
        "--single-process",
        "--no-zygote"
      ]
    }
  },
  "server": {
    "host": "0.0.0.0",
    "port": 10000,
    "auth": false,
    "cors": true,
    "allowedOrigins": ["*"]
  }
}
